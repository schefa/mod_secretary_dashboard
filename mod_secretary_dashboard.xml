<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="administrator" method="upgrade" version="3.5" position="icon">
    <name>Secretary Dashboard (backend)</name>
    <author>Fjodor Schäfer</author>
    <creationDate>2016-08-20</creationDate>
    <copyright>Copyright (c) 2015 Fjodor Schäfer All rights reserved.</copyright>
    <authorEmail>fjodor@schefa.com</authorEmail>
    <authorUrl>www.schefa.com</authorUrl>
    <version>3.0.1</version>
    <description>Secretary Dashboard module with quick icons</description>
    
	<updateservers>    
	    <server type="extension" priority="1"
	      name="com_secretary"><![CDATA[https://raw.githubusercontent.com/schefa/updateservers/master/secretary/mod_secretary_dashboard.xml]]>
	    </server>
	</updateservers>
    
    <files>
        <filename module="mod_secretary_dashboard">mod_secretary_dashboard.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <config>
		<fields name="params">
			<fieldset name="basic">
				<field name="showDocuments" type="radio" default="0" class="btn-group" label="Documents folders">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="showSubjects" type="radio" default="0" class="btn-group" label="Contacts groups">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="showProducts" type="radio" default="0" class="btn-group" label="Products categories">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="showMessages" type="radio" default="0" class="btn-group" label="Messages categories">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="showTimes" type="radio" default="0" class="btn-group" label="Times categories">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
